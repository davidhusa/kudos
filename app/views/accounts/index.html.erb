<h2>Account Management</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= image_tag account.photo(:thumb) %></td>
        <td><%= account.user.email %></td>
        <td><%= link_to 'Focus', teams_path(focus: account.id) %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to('Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }) unless account.user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %>
