<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.leader && team.leader.name %></td>
        <td><%= team.name %></td>
        <td><%= join_or_quit(team) %></td>
        <% if admin? || leader?(team) %>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end  %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
